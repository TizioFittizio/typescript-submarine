{
  "name": "typescript-submarine",
  "author": "Luca Campana",
  "description": "A SOLID typescript template",
  "version": "1.1.0",
  "main": ".dist/index.js",
  "license": "MIT",
  "repository": "https://github.com/TizioFittizio/typescript-submarine",
  "scripts": {
    "clean": "node ./node_modules/rimraf/bin.js dist",
    "build": "npm run clean && node ./node_modules/typescript/bin/tsc && npm run move-client-in-build",
    "start": "npm run build && node ./dist/index.js",
    "move-client-in-build": "copyfiles -u 1 ./src/client/**/*.* ./dist/",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "helmet": "^3.15.1",
    "simple-express-ts": "^2.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/helmet": "^0.0.42",
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.15",
    "@types/supertest": "^2.0.7",
    "copyfiles": "^2.2.0",
    "supertest": "^3.4.2",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.11.0",
    "tslint-sonarts": "^1.8.0",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "preset": "ts-jest"
  }
}
