{
  "name": "typescript-submarine",
  "author": "Luca Campana",
  "description": "A SOLID typescript template",
  "version": "1.1.0",
  "main": ".dist/index.js",
  "license": "MIT",
  "repository": "https://github.com/TizioFittizio/typescript-submarine",
  "scripts": {
    "clean": "node ./node_modules/rimraf/bin.js dist",
    "build": "npm run clean && node ./node_modules/typescript/bin/tsc",
    "start": "npm run build && node ./dist/index.js",
    "test": "jest"
  },
  "dependencies": {
    "apollo-server-express": "^3.3.0",
    "body-parser": "^1.18.3",
    "graphql": "^15.6.0",
    "helmet": "^3.15.1",
    "mongodb": "^4.1.2",
    "mongoose": "^6.0.8",
    "simple-express-ts": "^2.0.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/jest": "^24.0.0",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^10.12.15",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "preset": "ts-jest"
  }
}
