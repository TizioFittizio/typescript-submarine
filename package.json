{
  "name": "typescript-submarine",
  "author": "Luca Campana",
  "description": "A SOLID typescript template",
  "version": "0.0.1",
  "main": ".dist/index.js",
  "license": "MIT",
  "repository": "TODO",
  "scripts": {
    "clean": "node ./node_modules/rimraf/bin.js dist",
    "build": "npm run clean && node ./node_modules/typescript/bin/tsc && npm run move-client-in-build",
    "start": "npm run build && node ./dist/index.js",
    "move-client-in-build": "copyfiles -u 1 ./src/client/**/*.* ./dist/",
    "dev": "ts-node-dev --respawn --poll  --all-deps ./src/index.ts",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "helmet": "^3.15.1",
    "simple-express-ts": "^2.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/helmet": "^0.0.42",
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.15",
    "@types/supertest": "^2.0.7",
    "copyfiles": "^2.2.0",
    "jest": "^23.6.0",
    "rimraf": "^2.6.3",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.11.0",
    "tslint-sonarts": "^1.8.0",
    "typescript": "^3.2.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
